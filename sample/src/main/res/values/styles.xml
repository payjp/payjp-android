<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Material" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="Material.Outline">
        <item name="textInputStyle">@style/MaterialTextFieldOutline</item>
    </style>

    <style name="Material.Filled">
        <item name="textInputStyle">@style/MaterialTextFieldFilled</item>
    </style>

    <style name="Material.FilledDense">
        <item name="textInputStyle">@style/MaterialTextFieldFilledDense</item>
    </style>

    <style name="MaterialTextFieldOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- customize -->
    </style>

    <style name="MaterialTextFieldFilled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- customize -->
    </style>

    <style name="MaterialTextFieldFilledDense" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <!-- customize -->
    </style>

    <!-- Menu item style for theme switching -->
    <style name="MenuItemStyle">
        <item name="android:colorBackground">@color/menu_popup_background_color</item>
        <item name="android:textColor">@color/menu_item_text_color</item>
    </style>


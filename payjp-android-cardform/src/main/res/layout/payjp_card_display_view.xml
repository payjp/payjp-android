<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:clipToPadding="false"
        android:layout_width="300dp"
        android:layout_height="210dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:theme="@style/Payjp.Theme.CardForm.Display">

    <FrameLayout
            android:id="@+id/card_display_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:targetApi="lollipop">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ura"
                android:layout_gravity="center" />

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_display_front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="#ccc"
            tools:targetApi="lollipop">

        <TextView
                android:id="@+id/display_pan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="XXXX XXXX XXXX XXXX"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/display_expiration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="XX/XX"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/display_holder"
                app:layout_constraintHorizontal_bias="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/display_holder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="NAME"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/display_expiration"
                app:layout_constraintHorizontal_bias="0"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
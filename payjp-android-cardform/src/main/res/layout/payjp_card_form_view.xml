<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:orientation="vertical"
        tools:theme="@style/Payjp.Theme.CardForm"
        android:padding="16dp"
        tools:targetApi="o">

    <include layout="@layout/payjp_card_form_part_number_layout"
            android:id="@+id/layout_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <include layout="@layout/payjp_card_form_part_expiration_layout"
            android:id="@+id/layout_expiration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/payjp_card_form_margin" />

    <include layout="@layout/payjp_card_form_part_cvc_layout"
            android:id="@+id/layout_cvc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/payjp_card_form_margin" />

    <include layout="@layout/payjp_card_form_part_holder_name_layout"
            android:id="@+id/layout_holder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/payjp_card_form_margin" />

    <LinearLayout
        android:id="@+id/additional_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/payjp_card_form_margin"
        >
        <include
            android:id="@+id/additional_info_content"
            layout="@layout/payjp_card_form_header_additional_info"/>

    </LinearLayout>

    <include layout="@layout/payjp_card_form_part_email_layout"
            android:id="@+id/layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/payjp_card_form_margin" />

    <include layout="@layout/payjp_card_form_part_phone_number_layout"
            android:id="@+id/layout_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/payjp_card_form_margin" />

</LinearLayout>
